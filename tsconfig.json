{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "paths": {
      "api/*": ["apis/*"],
      "components/*": ["./components/*"],
      "configs/*": ["configs/*"],
      "hooks/*": ["./hooks/*"],
      "lib/*": ["./lib/*"],
      "pages/*": ["./pages/*"],
      "services/*": ["./services/*"],
      "styles/*": ["./styles/*"],
      "utils/*": ["./utils/*"],
      "images/*": ["./public/images/*"],
      "store/*": ["./store/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "target": "es5",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js"],
  "exclude": ["node_modules"]
}
